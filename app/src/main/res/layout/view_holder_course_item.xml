<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="220dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/frame_default_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_3A3A4C">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/icon_default_logo"/>
            </FrameLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_course_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_course_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextStyle_14"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_course_short_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextStyle_10"
        android:textColor="@color/black"
        android:layout_marginTop="2dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tag_list"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp" />

</androidx.appcompat.widget.LinearLayoutCompat>